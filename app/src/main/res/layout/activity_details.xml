<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_360sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_22sdp"
                android:alpha="0.2"
                android:background="@drawable/ic_bg_flowers" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_top" />

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_11sdp">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:src="@drawable/ic_left_arrow" />

                <TextView
                    android:id="@+id/big_and_lux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_back"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="top"
                    android:text=""
                    android:textColor="@color/dblack"
                    android:textSize="@dimen/_20sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignTop="@id/big_and_lux"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:contentPadding="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_share" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/big_and_lux"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="bottom"
                        android:text=""
                        android:textFontWeight="600"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="bottom"
                        android:textColor="#75828E"
                        android:text="/day"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:layout_below="@id/header"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/package_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pic1"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:id="@+id/some_id"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingTop="@dimen/_1sdp"
                                android:text="0"
                                android:textColor="@color/dblack"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:contentPadding="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/liked_image"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_like" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card1"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/package_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:text=""
                        android:textFontWeight="400"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calender_black" />

                    <TextView
                        android:id="@+id/package_created_date"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:hint="Date Not Set"
                        android:textFontWeight="400"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/package_set_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/edit2"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:textFontWeight="400"
                        android:text="Set Date"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_people" />

                    <TextView
                        android:textFontWeight="400"
                        android:id="@+id/package_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:text=""
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginVertical="@dimen/_13sdp"
            android:background="@drawable/pcakge_details_venue_bg"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_12sdp">

            <LinearLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/venue_img" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textFontWeight="400"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:text="Venue pre-selected"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/added_img" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date_img"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/date_img" />

                <TextView
                    android:id="@+id/set_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textFontWeight="400"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:text="Set Date "
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/date_checked"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/not_added_img" />



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/offer_img"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/offer_img" />

                <TextView
                    android:id="@+id/set_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textFontWeight="400"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:text="Offers"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/offer_checked"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/not_added_img" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_ons_img"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/addons_img" />

                <TextView
                    android:id="@+id/set_addons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:textFontWeight="400"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:text="Addon's"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/addons_checked"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/not_added_img" />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_marginVertical="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/booking_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".17"
                android:background="@drawable/unselected_textview_filter"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:paddingVertical="@dimen/_11sdp"
                android:textFontWeight="400"
                android:text="Go To Summary"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <TextView
                android:visibility="gone"
                android:id="@+id/booking_now2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".17"
                android:backgroundTint="#18A815"
                android:background="@drawable/custom_bg_btn"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:paddingVertical="@dimen/_11sdp"
                android:textFontWeight="400"
                android:text="Go To Summary"
                android:textColor="@color/white"
                android:textStyle="bold" />


<!--            <TextView-->
<!--                android:visibility="gone"-->
<!--                android:id="@+id/booking_now2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:backgroundTint="#18A815"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                android:layout_weight=".17"-->
<!--                android:textFontWeight="400"-->
<!--                android:background="@drawable/custom_bg_btn"-->
<!--                android:fontFamily="@font/poppinsmedium"-->
<!--                android:gravity="center"-->
<!--                android:textSize="@dimen/_13sdp"-->
<!--                android:paddingVertical="@dimen/_11sdp"-->
<!--                android:text="Go To Summary"-->
<!--                android:textColor="@color/white"-->
<!--                android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="#EAEAEA"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Venue"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#D83973" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Offers"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#D83973"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addonce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Add On's"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />


                    <View
                        android:id="@+id/view_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#D83973"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/container_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_tab_unselected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabSelectedTextColor="@color/colorPrimary" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/product_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>