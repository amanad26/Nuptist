<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VendorPackages.VendorVenueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdpq"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_185sdpq"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            app:cardCornerRadius="@dimen/_15sdpq"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bg_rectangle_pink">

                <ImageView
                    android:id="@+id/ic_calendar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_22sdpq"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/our_place_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdpq"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center_horizontal|top"
                    android:text="Our Place is Available!!"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/our_place_i1"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/our_place_i"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdpq"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_horizontal|top"
                    android:text="our place is match for your date"
                    android:textColor="#75828E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/change_and_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/our_place_i1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdpq"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center_horizontal|top"
                    android:text="Change  and see available date"
                    android:textColor="#D83973"
                    android:textSize="15sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdpq"
            android:layout_below="@id/card1"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            android:layout_marginTop="@dimen/_25sdpq"
            app:cardCornerRadius="@dimen/_10sdpq"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_pic2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdpq"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_15sdpq"
                    android:layout_marginBottom="@dimen/_10sdpq"
                    app:cardCornerRadius="@dimen/_10sdpq">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/img_card"
                            android:layout_width="@dimen/_45sdpq"
                            android:layout_height="@dimen/_55sdpq"
                            android:layout_marginStart="@dimen/_10sdpq"
                            android:layout_marginTop="@dimen/_8sdpq"
                            android:layout_marginEnd="@dimen/_10sdpq"
                            android:layout_marginBottom="@dimen/_8sdpq"
                            app:cardCornerRadius="@dimen/_5sdpq">

                            <ImageView
                                android:id="@+id/venur_imaeg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_pic1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/venueName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/img_card"
                            android:layout_marginTop="@dimen/_3sdpq"
                            android:layout_toEndOf="@+id/img_card"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Grand Ballroom"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/venue_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/venueName"
                            android:layout_alignStart="@id/venueName"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Rs. 200,000"
                            android:textColor="#D83973"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_15sdpq"
                            android:layout_marginBottom="@dimen/_15sdpq"
                            app:cardCornerRadius="@dimen/_2sdpq"
                            app:contentPadding="@dimen/_6sdpq">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_send" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_location_pink" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdpq"
                    android:layout_marginTop="@dimen/_15sdpq"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/gallery_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/gallery_image_3"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdpq"
                    android:layout_marginTop="@dimen/_10sdpq"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/gallery_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/gallery_image_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdpq"
                    android:layout_marginTop="@dimen/_10sdpq"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/gallery_image_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdpq"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_10sdpq"
                        app:cardElevation="0dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/gallery_image_7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loading" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/venue_images_recycler"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            android:layout_marginTop="@dimen/_15sdpq"
            android:layout_marginBottom="@dimen/_5sdpq"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/booking_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdpq"
                android:layout_weight=".17"
                android:background="@drawable/custom_bg_btn"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdpq"
                android:text="@string/make_a_booking"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".83"
                app:cardBackgroundColor="#18A815"
                app:cardCornerRadius="@dimen/_11sdpq"
                app:contentPadding="@dimen/_6sdpq">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdpq"
                    android:src="@drawable/ic_call_svg" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/what_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            android:layout_marginTop="@dimen/_10sdpq"
            android:fontFamily="@font/poppins_bold"
            android:text="What People Say"
            android:textColor="#101113"
            android:textFontWeight="600"
            android:textSize="@dimen/_16sdpq" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdpq">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdpq"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_photography_vactor"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdpq"
                    android:paddingVertical="@dimen/_5sdpq"
                    android:text="All"
                    android:textColor="#D83973"
                    android:textSize="@dimen/_12sdpq" />


                <LinearLayout
                    android:id="@+id/review_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_6sdpq"
                    android:layout_marginStart="@dimen/_20sdpq"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_3sdpq"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/review_5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdpq"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdpq"
                        android:text="5"
                        android:textColor="#A7B4C0"
                        android:textFontWeight="400"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/review_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_6sdpq"
                    android:layout_marginStart="@dimen/_20sdpq"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_3sdpq"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/review_4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdpq"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdpq"
                        android:text="4"
                        android:textColor="#A7B4C0"
                        android:textFontWeight="400"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdpq"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/review_recycler"/>

        </LinearLayout>



        <LinearLayout

            android:id="@+id/recent_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdpq"
            android:layout_marginBottom="@dimen/_10sdpq"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdpq"
                android:layout_marginTop="@dimen/_10sdpq"
                android:fontFamily="@font/poppins_bold"
                android:text="Other Package"
                android:textColor="#101113"
                android:textFontWeight="600"
                android:textSize="@dimen/_16sdpq" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recent_recyler_view"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>