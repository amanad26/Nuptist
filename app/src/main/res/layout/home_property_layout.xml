<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_5sdpq"
        android:paddingHorizontal="@dimen/_10sdpq"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdpq"
                android:src="@drawable/ic_pic1"
                android:scaleType="centerCrop"
                />

            <ImageView
                app:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_30sdpq"
                android:layout_marginEnd="@dimen/_10sdpq"
                android:layout_marginTop="@dimen/_10sdpq"
                android:layout_height="@dimen/_30sdpq"
                android:src="@drawable/ic_like"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_7sdpq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="top"
                android:text="Siddhi Vinayak Vihar"
                android:textColor="@color/bold_black"
                android:textFontWeight="600"
                android:textSize="18sp" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_2sdpq"
                android:id="@+id/property_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="top"
                android:text="By - Aman Khare"
                android:textColor="@color/bold_black"
                android:textFontWeight="600"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/property_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="top"
                        android:text="10Lac - 15Lac"
                        android:padding="@dimen/_1sdpq"
                        android:textColor="@color/bold_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/property_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top"
                        android:text="3 Thousand /Sq.ft"
                        android:padding="@dimen/_1sdpq"
                        android:textColor="@color/black_semi_transparent"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_13sdpq" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/property_price_per_feet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="end"
                        android:text="3000"
                        android:padding="@dimen/_1sdpq"
                        android:textColor="@color/bold_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="Per Sq.ft."
                        android:padding="@dimen/_1sdpq"
                        android:textColor="@color/black_semi_transparent"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_13sdpq" />


                </LinearLayout>

                </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdpq"
            android:layout_marginTop="@dimen/_5sdpq"
            android:background="#74D5D5D5"/>

    </LinearLayout>

</LinearLayout>