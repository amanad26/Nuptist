<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdpq"
        android:layout_marginStart="@dimen/_10sdpq"
        android:layout_marginEnd="@dimen/_10sdpq"
        android:layout_marginBottom="@dimen/_10sdpq"
        app:cardCornerRadius="@dimen/_5sdpq">

        <LinearLayout
            android:layout_margin="@dimen/_5sdpq"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="@dimen/_80sdpq"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdpq"
                android:layout_height="@dimen/_60sdpq"
                android:layout_marginLeft="@dimen/_8sdpq"
                app:cardCornerRadius="@dimen/_5sdpq">


                <com.makeramen.roundedimageview.RoundedImageView
                    app:riv_corner_radius="@dimen/_5sdpq"
                    android:id="@+id/add_once_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/_5sdpq"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/add_once_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text=""
                    android:maxLength="25"
                    android:textColor="@color/bold_black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_14sdpq" />


                <TextView
                    android:id="@+id/add_once_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_5sdpq"
                    android:fontFamily="@font/poppins_regular"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12sdpq" />



            </LinearLayout>



            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="end">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_5sdpq"
                    android:gravity="center_vertical"
                    android:background="@drawable/ic_circleprimary"
                    android:layout_width="@dimen/_30sdpq"
                    android:layout_height="@dimen/_30sdpq"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bid_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:text="9"
                        android:gravity="center"
                        android:textColor="@color/white2"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12sdpq" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bid_noe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/texview_bg"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_5sdpq"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Quote A Price"
                        android:gravity="center"
                        android:padding="@dimen/_5sdpq"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12sdpq" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/bid_noe_inactive"
                    android:layout_width="@dimen/_65sdpq"
                    android:layout_height="@dimen/_30sdpq"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cancle_background"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_5sdpq"
                    android:gravity="center">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/added"
                        android:gravity="center"
                        android:padding="@dimen/_5sdpq"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12sdpq" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>