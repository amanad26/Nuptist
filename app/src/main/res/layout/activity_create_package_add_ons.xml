<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreatePackageAddOnsActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdpq">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdpq"
                android:src="@drawable/ic_left_arrow" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="Create Vendor"
                android:textColor="@color/bold_black"
                android:textFontWeight="600"
                android:textSize="@dimen/_20sdpq" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdpq"
            android:orientation="vertical"
            android:padding="@dimen/_10sdpq">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_15sdpq"
                android:background="#D9E6F2" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="Add Ons"
                android:textColor="@color/bold_black"
                android:textFontWeight="600"
                android:textSize="@dimen/_16sdpq" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdpq"
                android:fontFamily="@font/product_snas_bold"
                android:text="Name"
                android:textColor="@color/text_regular"
                android:textFontWeight="400"
                android:textSize="@dimen/_14sdpq" />


            <EditText
                android:id="@+id/search_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdpq"
                android:background="@drawable/shape_edittext8r"
                android:fontFamily="@font/product_snas_regular"
                android:hint="Url of Venue Address"
                android:inputType="text"
                android:padding="@dimen/_15sdpq"
                android:textColor="@color/bold_black"
                android:textColorHint="@color/ltextcolor"
                android:textFontWeight="400"
                android:textSize="@dimen/_14sdpq" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdpq"
                android:background="@drawable/shape_edittext8r"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:fontFamily="@font/product_snas_regular"
                android:text="Add Ons"
                android:gravity="center_vertical"
                android:padding="@dimen/_15sdpq"
                android:textColor="@color/bold_black"
                android:textFontWeight="400"
                android:textSize="@dimen/_14sdpq" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdpq"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/book_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_20sdpq"
                    android:background="@drawable/roundprimary_gb"
                    android:fontFamily="@font/product_snas_regular"
                    android:gravity="center"
                    android:padding="@dimen/_15sdpq"
                    android:text="Save Add Ons"
                    android:textColor="@color/white2"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_14sdpq" />

            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>