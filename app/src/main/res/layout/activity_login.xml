<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_140sdpq"
                    android:layout_height="@dimen/_110sdpq"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdpq"
                    android:src="@drawable/nuptistnew_old" />

                <LinearLayout
                    android:layout_below="@id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_30sdpq"
                    android:background="@drawable/round_gb"
                    android:elevation="@dimen/_3sdpq"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_25sdpq"
                        android:fontFamily="@font/product_snas_bold"
                        android:text="Login to Continue"
                        android:textColor="@color/bold_black"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_25sdpq" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_25sdpq"
                        android:layout_marginBottom="@dimen/_10sdpq"
                        android:gravity="center"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/signin_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdpq"
                            android:background="@drawable/shape_edittext"
                            android:fontFamily="@font/product_snas_regular"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_15sdpq"
                            android:textColor="@color/black"
                            android:textColorHint="#75828E"
                            android:textSize="@dimen/_15sdpq" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdpq"
                            android:background="@drawable/shape_edittext"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/signin_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdpq"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:fontFamily="@font/product_snas_regular"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:padding="@dimen/_15sdpq"
                                android:textColor="@color/blackk"
                                android:textColorHint="#75828E"
                                android:textSize="@dimen/_15sdpq" />


                            <ImageView
                                android:id="@+id/show_hide"
                                android:layout_width="@dimen/_25sdpq"
                                android:layout_height="@dimen/_25sdpq"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/_8sdpq"
                                android:onClick="ShowHidePass"
                                android:src="@drawable/ic_baseline_visibility_off_24"
                                app:tint="@color/grey" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/signin_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdpq"
                            android:fontFamily="@font/product_snas_regular"
                            android:gravity="end"
                            android:text="Forgot Password?"
                            android:textColor="@color/splash"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_14sdpq" />


                             <soup.neumorphism.NeumorphCardView
                                 android:id="@+id/signUpButton"
                                 android:layout_marginTop="@dimen/_20sdpq"
                                 style="@style/Widget.Neumorph.Button"
                                 android:layout_width="match_parent"
                                 android:layout_height="@dimen/_70sdpq"
                                 android:visibility="gone"
                                 app:neumorph_backgroundColor="@color/colorPrimary"
                                 app:layout_constraintBottom_toBottomOf="parent"
                                 app:layout_constraintEnd_toEndOf="parent"
                                 app:layout_constraintStart_toStartOf="parent" >

                                 <TextView
                                     android:id="@+id/Otpverify"
                                     android:gravity="center"
                                     android:fontFamily="@font/product_snas_regular"
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:text="Login"
                                     android:textSize="@dimen/_17sdpq"
                                     android:textStyle="bold"
                                     android:textColor="@color/white"/>


                             </soup.neumorphism.NeumorphCardView>

                             <soup.neumorphism.NeumorphCardView
                                 android:id="@+id/signUpButton2"
                                 android:layout_marginTop="@dimen/_20sdpq"
                                 style="@style/Widget.Neumorph.Button"
                                 android:layout_width="match_parent"
                                 android:layout_height="@dimen/_70sdpq"
                                 app:neumorph_backgroundColor="#F1F1F1"
                                 app:layout_constraintBottom_toBottomOf="parent"
                                 app:layout_constraintEnd_toEndOf="parent"
                                 app:layout_constraintStart_toStartOf="parent" >

                                 <TextView
                                     android:gravity="center"
                                     android:fontFamily="@font/product_snas_regular"
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:text="Login"
                                     android:textSize="@dimen/_17sdpq"
                                     android:textStyle="bold"
                                     android:textColor="@color/black"/>
                             </soup.neumorphism.NeumorphCardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdpq"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/product_snas_regular"
                                android:gravity="center"
                                android:text="Don’t have an account?"
                                android:textColor="@color/text_regular"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_17sdpq" />


                            <TextView
                                android:id="@+id/signup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdpq"
                                android:fontFamily="@font/product_snas_bold"
                                android:gravity="center"
                                android:text=" Sign Up"
                                android:textColor="@color/splash"
                                android:textFontWeight="700"
                                android:textSize="@dimen/_17sdpq" />


                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdpq"
                            android:fontFamily="@font/product_snas_regular"
                            android:gravity="center"
                            android:text="or login with"
                            android:textColor="@color/text_regular"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdpq" />


                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdpq"
                            android:layout_marginTop="@dimen/_1sdpq"
                            android:layout_marginBottom="@dimen/_15sdpq"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <com.skydoves.elasticviews.ElasticCardView
                                android:id="@+id/facebook"
                                android:layout_width="@dimen/_65sdpq"
                                android:layout_height="@dimen/_65sdpq"
                                android:layout_marginStart="@dimen/_5sdpq"
                                android:layout_marginTop="@dimen/_5sdpq"
                                android:layout_marginEnd="-10dp"
                                android:layout_marginBottom="@dimen/_5sdpq"
                                app:cardCornerRadius="@dimen/_12sdpq"
                                app:cardElevation="@dimen/_3sdpq">

                                <ImageView
                                    android:layout_width="@dimen/_40sdpq"
                                    android:layout_height="@dimen/_40sdpq"
                                    android:layout_gravity="center"
                                    android:src="@drawable/facebook_new"
                                    android:visibility="visible" />

                            </com.skydoves.elasticviews.ElasticCardView>

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdpq"
                                android:layout_marginBottom="@dimen/_30sdpq"
                                android:drawablePadding="8dp"
                                android:padding="@dimen/_10sdpq"
                                android:visibility="gone" />

                            <com.skydoves.elasticviews.ElasticCardView
                                android:layout_width="@dimen/_30sdpq"
                                android:layout_height="@dimen/_80sdpq"
                                android:layout_margin="@dimen/_15sdpq"
                                android:visibility="invisible"
                                app:cardCornerRadius="@dimen/_12sdpq"
                                app:cardElevation="@dimen/_3sdpq">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/google" />

                            </com.skydoves.elasticviews.ElasticCardView>


<!--                            <com.skydoves.elasticviews.ElasticCardView-->
<!--                                android:id="@+id/google_sign_in"-->
<!--                                android:layout_width="@dimen/_65sdpq"-->
<!--                                android:layout_height="@dimen/_65sdpq"-->
<!--                                android:layout_marginEnd="@dimen/_5sdpq"-->
<!--                                android:layout_marginTop="@dimen/_5sdpq"-->
<!--                                android:layout_marginBottom="@dimen/_5sdpq"-->
<!--                                android:visibility="visible"-->
<!--                                android:layout_marginStart="-10dp"-->
<!--                                app:cardCornerRadius="@dimen/_12sdpq"-->
<!--                                app:cardElevation="@dimen/_3sdpq">-->

<!--                                <ImageView-->
<!--                                    android:layout_width="@dimen/_40sdpq"-->
<!--                                    android:layout_height="@dimen/_40sdpq"-->
<!--                                    android:layout_gravity="center"-->
<!--                                    android:src="@drawable/google_new" />-->

<!--                            </com.skydoves.elasticviews.ElasticCardView>-->


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdpq"
                            android:layout_marginTop="@dimen/_1sdpq"
                            android:layout_marginBottom="@dimen/_15sdpq"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <com.skydoves.elasticviews.ElasticCardView
                                android:id="@+id/google_sign_in"
                                android:layout_width="@dimen/_65sdpq"
                                android:layout_height="@dimen/_65sdpq"
                                android:layout_marginEnd="@dimen/_5sdpq"
                                android:layout_marginTop="@dimen/_5sdpq"
                                android:layout_marginBottom="@dimen/_5sdpq"
                                android:visibility="visible"
                                android:layout_marginStart="-10dp"
                                app:cardCornerRadius="@dimen/_12sdpq"
                                app:cardElevation="@dimen/_3sdpq">

                                <ImageView
                                    android:layout_width="@dimen/_40sdpq"
                                    android:layout_height="@dimen/_40sdpq"
                                    android:layout_gravity="center"
                                    android:src="@drawable/google_new" />

                            </com.skydoves.elasticviews.ElasticCardView>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>





</androidx.core.widget.NestedScrollView>