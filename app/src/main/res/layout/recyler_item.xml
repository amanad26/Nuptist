<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_7sdp"
    android:paddingHorizontal="@dimen/_1sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.skydoves.elasticviews.ElasticCardView
        android:id="@+id/details"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_4sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="center"
                        android:src="@drawable/ic_pic1"
                        app:cardCornerRadius="@dimen/_7sdp">


                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="@dimen/_7sdp"
                            android:id="@+id/image_package"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                           />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rating_card"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:background="@drawable/round_white_gb"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_star_24"/>


                <TextView
                    android:id="@+id/rating_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:drawablePadding="@dimen/_3sdp"
                    android:textFontWeight="500"
                    android:text="0"
                    android:textColor="@color/dblack"
                    android:textSize="@dimen/_11sdp" />
                </LinearLayout>


            </RelativeLayout>



            <LinearLayout
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_below="@id/ic_back"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="top"
                    android:text=""
                    android:textColor="@color/dblack"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/location"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/address_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/bold_black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/ic_no_of_guest"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/max_guest_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/bold_black"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="#B2E6E6E6"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Offers start from"
                        android:textColor="@color/text_regular"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_11sdp" />


                    <TextView
                        android:id="@+id/price_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12sdp" />





                </RelativeLayout>



            </LinearLayout>



        </LinearLayout>
    </com.skydoves.elasticviews.ElasticCardView>


</LinearLayout>