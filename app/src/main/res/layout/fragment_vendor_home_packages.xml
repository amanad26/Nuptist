<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".VendorHomePackagesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/AG_SErach"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdpq"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10sdpq"
        app:cardElevation="@dimen/_7sdpq"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_responsive"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_50sdpq"
                android:layout_height="@dimen/_50sdpq"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdpq"
                android:background="@drawable/ic_circle"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/_20sdpq"
                    android:layout_height="@dimen/_20sdpq"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_calendar_month_24" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdpq"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingHorizontal="@dimen/_2sdpq"
                    android:paddingVertical="@dimen/_10sdpq"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="2"
                    android:text="Set The Criteria"
                    android:textColor="@color/white2"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_17sdpq" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="@dimen/_25sdpq"
                    android:layout_height="@dimen/_25sdpq"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_15sdpq"
                    android:background="@drawable/ic_circle"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="@dimen/_25sdpq"
                        android:layout_height="@dimen/_25sdpq"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

