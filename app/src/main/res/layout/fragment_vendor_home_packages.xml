    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdpq"
        android:id="@+id/progress_bar"/>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
