<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="@dimen/_5sdpq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addons_categrory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Addonce Name "
            android:layout_weight="1"
            android:padding="@dimen/_2sdpq"
            android:textSize="@dimen/_17sdpq"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_30sdpq"
            android:layout_height="@dimen/_30sdpq"
            app:tint="@color/black"
            android:src="@drawable/ic_arrow_down"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/add_once_recycler"/>

</LinearLayout>