<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".BarDetailsActivity">

    <LinearLayout
        android:paddingBottom="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/_260sdpq"
                android:layout_height="@dimen/_360sdpdpq"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_22sdp"
                android:alpha="0.2"
                android:background="@drawable/ic_bg_flowers" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_top" />

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_left_arrow" />

                <TextView
                    android:id="@+id/big_and_lux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_back"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="top"
                    android:text=""
                    android:textFontWeight="600"
                    android:textColor="@color/dblack"
                    android:textSize="@dimen/_17sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:visibility="gone"
                    android:layout_alignTop="@id/big_and_lux"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:contentPadding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_share" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/big_and_lux"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="bottom"
                        android:text=""
                        android:textFontWeight="400"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="bottom"
                        android:text="/day"
                        android:textFontWeight="400"
                        android:textColor="#75828E"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:layout_below="@id/header"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_corner_radius="@dimen/_10sdp"
                        android:scaleType="centerCrop"
                        android:id="@+id/package_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:id="@+id/some_id"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:fontFamily="@font/poppinsmedium"
                                android:paddingTop="@dimen/_1sdp"
                                android:text="0"
                                android:textColor="@color/dblack"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:contentPadding="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/liked_image"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_like" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card1"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/package_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:text=""
                        android:textFontWeight="400"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calender_black" />

                    <TextView
                        android:id="@+id/package_created_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:text=""
                        android:textFontWeight="400"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_people" />

                    <TextView
                        android:id="@+id/package_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="@dimen/_1sdp"
                        android:text=""
                        android:textFontWeight="400"
                        android:textColor="@color/dblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:gravity="center_vertical|center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/custom_bg_rectangle_pink"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_calendar" />


            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/date_id_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_calendar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start|top"
                android:text="Your booking is ready and suitable for the specified date"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical|center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=" Offers "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />


                <TextView
                    android:id="@+id/offer_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/ic_selectd_offers"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_down" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/offer_recler"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical|center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=" Add Once "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/addons_count"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/ic_selectd_addons"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_down" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/addons_recler"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vendor_linaer_2"
            android:gravity="center_vertical|center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vendor_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=" Service Providers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/vendors_count"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/ic_selectd_vendor"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_down" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/vendors_recler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center_vertical|center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start|top"
                    android:text=" Total Price  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/ic_calendar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="end|top"
                    android:text=" Total Price  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/review_added_lienar"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/added_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_weight=".17"
                android:background="@drawable/cancle_btn_backgound"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdp"
                android:text="Review Added"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/add_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_weight=".17"
                android:background="@drawable/custom_bg_btn"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/add_review"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_revire_added"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/booking_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight=".17"
                android:background="@drawable/custom_bg_btn"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdp"
                android:text="Cancel Booking"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booking_now2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_weight=".17"
                android:background="@drawable/cancle_btn_backgound"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdp"
                android:text="Canceled"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>

</androidx.core.widget.NestedScrollView>