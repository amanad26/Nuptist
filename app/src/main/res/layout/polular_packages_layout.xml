<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.skydoves.elasticviews.ElasticCardView
            android:id="@+id/toch_it"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:paddingBottom="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_package"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_115sdp"
                            android:scaleType="centerCrop"
                            />

                    </RelativeLayout>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_150sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_like"
                        android:text="20% off"
                        app:tint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/package_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Sunrice Package"
                        android:textColor="@color/dblack"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="1"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/some_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_star_24"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/dblack"
                            android:textFontWeight="700"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="/5"
                            android:textColor="#75828E"
                            android:textFontWeight="700"
                            android:textSize="@dimen/_9sdp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:visibility="visible"
                                android:id="@+id/package_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="@dimen/_30sdp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="52000"
                                android:textColor="@color/dblack"
                                android:textFontWeight="700"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="/day"
                                android:textColor="#75828E"
                                android:textFontWeight="700"
                                android:textSize="@dimen/_9sdp" />


                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </com.skydoves.elasticviews.ElasticCardView>

    </LinearLayout>


</LinearLayout>